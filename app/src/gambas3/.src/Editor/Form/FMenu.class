Public Sub btnUp_Click()

  Dim iInd As Integer
  Dim sItem As String
  Dim hCMenu As CMenu
  Dim iCount As Integer

  iCount = $aMenu.Count
  If iCount <= 1 Then Return

  If $iCurrent = $aMenu.Max Then Return
  If gvwMenu.Rows[0].Selected Then Return
  
  For iInd = 0 To $aMenu.Count - 2

    If gvwMenu.Rows[iInd].Selected Then
      Swap $aMenu[iInd], $aMenu[iInd - 1]
      SetModified
    End If

  Next

  SetCurrent($iCurrent - 1)
  gvwMenu.Refresh

  ReadMenu

End


Public Sub btnDown_Click()

  Dim iInd As Integer
  Dim sItem As String
  Dim hCMenu As CMenu
  Dim iCount As Integer

  iCount = $aMenu.Count
  If iCount <= 1 Then Return

  If $iCurrent = $aMenu.Max Then Return

  If gvwMenu.Rows[iCount - 2].Selected Or gvwMenu.Rows[iCount - 1].Selected Then Return

  For iInd = $aMenu.Count - 2 To 0 Step -1

    If gvwMenu.Rows[iInd].Selected Then

      Swap $aMenu[iInd], $aMenu[iInd + 1]
      SetModified

    End If

  Next

  SetCurrent($iCurrent + 1)
  gvwMenu.Refresh

  ReadMenu

End


Private Sub SetCurrent(iCurrent As Integer)

  If iCurrent < 0 Or iCurrent >= $aMenu.Count Then Return

  $iCurrent = iCurrent
  gvwMenu.Row = $iCurrent
  gvwMenu.Rows[gvwMenu.Row].Selected = True

End

