Public Sub Form_Open()

  Settings.Read(Me)
  'PRINT "_new"
  Me.Title = $hForm.Name & " - " & ("Menu editor")
  
  gvwMenu.Rows.Count = 0
  gvwMenu.Columns.Count = 3
  gvwMenu.Columns[0].Width = 20
  gvwMenu.Columns[1].Expand = True
  gvwMenu.Columns[2].Width = Desktop.Scale * 16
  
  $iCurrent = -1
  LoadShortcut
  LoadAllMenu
  
