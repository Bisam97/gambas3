End

Public Sub Form_Close()
  
  If $bModified Then
    Select Case Message.Warning(("Menus have been modified!"), ("Save"), ("Ignore"), ("Cancel"))
      Case 1
        SaveAllMenu
      Case 2
      Case 3
        Stop Event
        Return
    End Select
  Endif
  
  Settings.Write(Me)
  
End



