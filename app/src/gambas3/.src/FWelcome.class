Private Sub GetTitle(hProjectInfo As CProjectInfo) As String
  
  With hProjectInfo
    Return "<b>" & .Name & "</b> " & .Version & "<br><font size=\"-1\" color=\"gray\">" & .Title & "</font>"
  End With
  
End


Private Sub FillRecent()

  Dim aList As CRecentFile[]
  Dim hChild As Control
  Dim iInd As Integer
  Dim hButton As CCoolButton
  Dim hProjectInfo As CProjectInfo
  Dim sTitle As String
  Dim sLastTitle As String
  Dim hDrawingArea As DrawingArea
  Dim Y As Integer

  Inc Application.Busy
  
  aList = CRecentFile.Get(chkSortRecent.Value)
  
  svwRecent.Arrangement = Arrange.None
  
  For Each hChild In svwRecent.Children
    hChild.Delete
  Next

  For iInd = 0 To aList.Count - 1
    hProjectInfo = New CProjectInfo(aList[iInd].Path)
    If Not chkSortRecent.Value Then
      sTitle = aList[iInd].GetSlot()
      If sTitle <> sLastTitle Then
        sLastTitle = sTitle
        hDrawingArea = New DrawingArea(svwRecent) As "dwgExample"
        'hLabel = NEW Label()
        With hDrawingArea
          .Move(0, Y, 64, Desktop.Scale * 4)
          .Tag = sTitle
          .Font = Font["Bold"]
          .Foreground = Color.SelectedBackground
          '.Background = Color.TextBackground
          Y = Y + .H
        End With
      Endif
    Endif
    With hProjectInfo
      hButton = New CCoolButton(svwRecent, 0, Y, svwRecent.ClientW, Desktop.Scale * 6, GetTitle(hProjectInfo), Project.StretchIcon(.Icon, 24).Picture) As "btnOpenRecent"
      hButton.Tag = aList[iInd].Path
      hButton.ToolTip = File.Dir(aList[iInd].Path)
    End With
    Y += Desktop.Scale * 6
  Next

  If aList.Count = 0 Then btnRecent.Enabled = False
  
  svwRecent.Arrangement = Arrange.Vertical
  
  Dec Application.Busy
  
End

Public Sub chkSortRecent_Click()

  FillRecent  

End

