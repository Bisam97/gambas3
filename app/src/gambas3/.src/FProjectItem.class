' Gambas class file

Public Sub SetPath(sPath As String)
  
  Dim hProjectInfo As CProjectInfo
  Dim sTitle As String
  Dim sInfo As String
  
  hProjectInfo = New CProjectInfo(sPath)
  With hProjectInfo
    imgIcon.Picture = .Icon
    If .Title Then 
      sTitle = .Title 
    Else 
      sTitle = .Name
    Endif
    'lblName.Text = "<b><font size=\"+1\"" & sTitle & " (" & .Version & ")</font></b>"
    sTitle = "<b>" & sTitle & " (" & .Version & ")" & "</b>"
    If .Authors And If .Authors.Count Then 
      sTitle &= "<font color=\"#404040\" size=\"-1\">&nbsp;-&nbsp;<b>" & ("Author(s)") & " :</b> " & .Authors.Join(", ") & "</font>"
    Endif 
    sInfo &= Replace(sPath, System.User.Home, "~")
    lblName.Text = sTitle
    txtInfo.Text = "<font color=\"#404040\">" & sInfo & "</font>"
  End With
  
  Me.Tag = sPath
  
End
