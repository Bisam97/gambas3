Public Sub WakeUp(bReplace As Boolean)
  
  Dim sFind As String

  $bReplace = bReplace
  Me.Show
  tabSearch.Index = 0

  Update()
  
  Try sFind = $hCurrent.GetSelection()

  If $bReplace And If sFind Then
    cmbReplace.SelectAll
    cmbReplace.SetFocus
  Else
    cmbSearch.SelectAll
    cmbSearch.SetFocus
  Endif
  
  If sFind Then cmbSearch.Text = sFind
  ShowString
  
End

