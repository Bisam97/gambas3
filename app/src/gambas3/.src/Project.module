Private Function AddMessage(sVoid As String) As String

  Dim iPos As Integer
  Dim sMsg As String

  If Stat(OUTPUT_FILE).Size = 0 Then

    SetMessage(sVoid)
    Return

  Else
  
    sMsg = RTrim(File.Load(OUTPUT_FILE))
    iPos = RInStr(sMsg, "\n")
    If iPos Then sMsg = Mid$(sMsg, iPos + 1)
    Return sMsg

  Endif

End


Private Sub CompileError(sMsg As String)

  Dim iPos As Integer
  Dim sFile As String
  Dim iLine As Integer
  Dim hForm As FEditor
  Dim sErr As String
  Dim aErr As String[]

  iPos = RInStr(sMsg, "\n")
  If iPos Then sMsg = Mid$(sMsg, iPos + 1)

  If sMsg Begins "gbc: ERROR: " Then
  
    sMsg = Mid$(sMsg, Len("gbc: ERROR: ") + 1)
    SetMessage(sMsg)
    Message.Error(("Cannot compile the project.") & "\n" & sMsg)

  Else
  
    iPos = InStr(sMsg, ":")
    sFile = Left$(sMsg, iPos - 1)
    sMsg = Mid$(sMsg, iPos + 1)
  
    iPos = InStr(sMsg, ":")
    'if iPos = 0 then return
  
    iLine = Val(Left$(sMsg, iPos - 1))
    'if iLine = 0 then return
  
    'sFile = File.Dir(Path) &/ File.Name(sFile)
  
    hForm = OpenFile($cSourceDir[File.Name(sFile)], iLine)
  
    sErr = Trim(Mid$(sMsg, iPos + 1))
    aErr = Split(sErr, "\t")
    aErr.Resize(5)
    If Left(aErr[1]) = "#" Then
      Select CInt(Mid$(aErr[1], 2))
        Case 1
          aErr[1] = ("first")
        Case 2
          aErr[2] = ("second")
        Case 3
          aErr[1] = ("third")
        Default
          aErr[1] = Subst(("&1th"), Mid$(aErr[1], 2))
      End Select
    Endif
    sErr = Subst(Tr$(aErr[0]), aErr[1], aErr[2], aErr[3], aErr[4])

    If hForm And If iLine >= hForm.Editor.Lines.Count Then
      SetMessage(File.BaseName(sFile) & ": " & sErr & " " & ("in form definition"))
      sMsg = "<b>" & sErr & "</b><p>" & ("in form definition")
    Else
      SetMessage(File.BaseName(sFile) & "." & CStr(iLine) & ": " & sErr)
      sMsg = "<b>" & sErr & "</b><p>" & Subst(("In class &1 at line &2."), File.Name(sFile), CStr(iLine))
    Endif
    
    hForm.ShowErrorMessage(sMsg, "make")
    
  Endif

'Catch

End


