  Try Mkdir sPath
  
  If Error Then 
    Message.Error(Error.Text)
    Return False
  Endif
  
  If Not bNoVerCtrl Then VersionControl.AddDir(sPath)

  RefreshKey(sPath)
  Return True
  
End

