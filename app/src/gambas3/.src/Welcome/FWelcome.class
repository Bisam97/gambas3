Public Sub Form_KeyPress()

  If Key.Code = Key.Escape Then
    btnQuit_Click
  Else If Key.Alt Then
    If Key.Code = Key["P"] Then
      Toggle(LIST_RECENT)
      Stop Event
    Else If Key.Code = Key["E"] Then
      Toggle(LIST_EXAMPLE)
      Stop Event
    Endif
  Endif

End



Public Sub Form_Close()

  Settings.Write(Me)
  Settings["/FWelcome/SortRecent"] = $iSort

End

