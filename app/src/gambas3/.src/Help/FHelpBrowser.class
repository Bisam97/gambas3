Public Sub Form_Open()

  Settings.Read(Me)
  splHelp.Layout = [1, 4]
  If Not webHelp.Url Then 
    webHelp.Url = MHelp.GetURL() & "?help&" & MHelp.GetHelpLanguage()
    webHelp.TextZoom = 0.8
  Endif

End

Public Sub Form_Close()
  
  Settings.Write(Me)
  
End

Public Sub btnHome_Click()

  webHelp.Url = MHelp.GetURL() & "?help&" & MHelp.GetHelpLanguage()
  webHelp.TextZoom = 0.8

End

