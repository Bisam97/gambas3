Public Sub tvwProject_Activate()

  Dim sKey As String
  Dim hModule As CModule

  sKey = tvwProject.Key

  If sKey Then
    tvwProject[sKey].Expanded = True
    If CanEdit(sKey) Then
      If $bCtrl Then
        If File.Ext(sKey) <> "module" Then
          sKey = File.SetExt(sKey, "class")
        Endif
      Endif
      Project.OpenFile(sKey)
    Endif
  Endif

End


