Private Function DefaultFont_Read() As Font

  Return GetView().Font

End

Public Sub DrawText(sText As String, hFont As Font, iCol As Integer, X As Integer, Y As Integer)
  
  Paint.Background = iCol
  Paint.Font = hFont
  Paint.DrawText(sText, X, Y + hFont.Ascent)
  
End

Public Sub PtToPx(iPt As Integer) As Integer
  
  Return iPt * Desktop.Resolution / 72
  
End
