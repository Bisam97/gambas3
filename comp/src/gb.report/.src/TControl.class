' Gambas class file

'Fast
Private $iCtrl As Integer
Public RealPage As Integer
Public RelPage As Integer = -1
Property Read RealLeft As Float
Property Read RealTop As Float
Property Read RealWidth As Float
Property Read RealHeight As Float
Public SizeHint As TSizeHint
Public _RealPadding As Float
Public _SkipPainting As Boolean = False
Public _PageChildren As New Collection
Public Index As Integer
Property Ctrl As ReportControl
Private fX As Float
Private fY As Float
Private fW As Float
Private fH As Float

Public Function _SetGeometry(X As Float, Y As Float, W As Float, H As Float) As Float

  fX = X
  fY = Y
  fW = W
  fH = H

End

Private Function Ctrl_Read() As ReportControl

  Return ReportControl._ObjectFromId[$iCtrl]

End

Private Sub Ctrl_Write(Value As ReportControl)

  $iCtrl = Value.id

End

Private Function RealLeft_Read() As Float

  Return MTools.UnitsToPixels(fX)

End

Private Function RealTop_Read() As Float

  Return MTools.UnitsToPixels(fY)

End

Private Function RealWidth_Read() As Float

  Return MTools.UnitsToPixels(fX + fW) - MTools.UnitsToPixels(fX)

End

Private Function RealHeight_Read() As Float

  Return MTools.UnitsToPixels(fY + fH) - MTools.UnitsToPixels(fY)

End
