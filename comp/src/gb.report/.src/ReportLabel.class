    Paint.Text(sTempText, (x + hControl.RealLeft + iPadding), (y + hControl.RealTop + iPadding), hControl.RealWidth - 2 * iPadding, hControl.RealHeight - 2 * iPadding, $iAlignment)
    Paint.Fill
