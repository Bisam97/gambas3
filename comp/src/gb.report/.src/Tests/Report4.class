' Gambas class file

Private $hres As Result

Public Sub _new()

  'Report.Debug = True

  Try Connections["Connection2"].Open
  $hres = db.Exec("SELECT fc.cd_sc as codesoc, fc.int_sc as intsoc, fcc.compte_cc as compte, fcc.intitule_cc as intitule From Fiches_Comptes01 as fcc "
  "Left join Fiches_Societes as fc on fc.cd_sc=1")
  ReportHBox4.DataCount = $hres.Count

End

Public Sub lblCpte_Data()

  $hres.MoveTo(Last.DataIndex)
  Last.data = $hres!compte

End

Public Sub lblcpteLab_Data()

  $hres.MoveTo(Last.DataIndex)
  Last.data = $hres!intitule

End

Public Sub lblSoc_Data()

  Last.data = $hres!codesoc & " " & $hres!intsoc

End

Public Sub lblDate_Data()

  Last.data = Format(Now(), "dddd dd mmmm yyyy")

End

Public Sub ReportImage1_Data()

  Last.Data = Picture["icon:/32/directory"].Image

End
