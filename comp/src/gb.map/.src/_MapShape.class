Public Sub AddPoint(Id As String, Points As MapPoint)
  
  Dim hItem As New _ShapeItem
  hItem.Type = Me.Point
  hItem.Id = Id
  hItem.Center = Points
  hItem.Points = Points
  $hShapes.Add(hItem)
  $colIDShape[Id] = $hShapes.Max
End

Public Sub AddMultipoint(Id As String, Points As MapPoint[])
  
  Dim hItem As New _ShapeItem
  hItem.MultiPoint = MultiPoint
  hItem.Id = Id
  hItem.Center = GetCenter(Points)
  hItem.Points = Points
  $hShapes.Add(hItem)
  $colIDShape[Id] = $hShapes.Max
End

Public Sub AddPolyLine(Id As String, Points As MapPoint[])
  
  Dim hItem As New _ShapeItem
  hItem.Type = Polyline
  hItem.Id = Id
  hItem.Center = GetCenter(Points)
  hItem.Box = GetPointsBox(Points)
  hItem.Points = Points
  $hShapes.Add(hItem)
  $colIDShape[Id] = $hShapes.Max
End

Public Sub AddPolygon(Id As String, Points As MapPoint[][])
  
  Dim hItem As New _ShapeItem
  hItem.Type = Polygon
  hItem.Id = Id
  hItem.Center = GetCenter(Points[0])
  hItem.Box = GetPointsBox(Points[0])
  hItem.Points = Points
  $hShapes.Add(hItem)
  $colIDShape[Id] = $hShapes.Max
End

Public Sub _Draw()
  
  Dim hItem As _ShapeItem
  Dim i, j As Integer
  Dim pt As Point
  Dim hMap As Map = GetMap()
  Dim hPoly As Integer[]
  Dim iColor As Integer
  
  If $hShapes.Count = 0 Then Return
  For i = 0 To $hShapes.Max
  iColor = Color.SetAlpha(Me.Color, 255 * Me.Opacity)
  If $hShapes[i].Selected Then icolor = Color.White
    Select Case $hShapes[i].Type
      Case Me.Point
        pt = Geo.MapPointToPixel($hShapes[i].Points, hMap.zoom)
        Paint.Brush = Paint.Color(Color.Green)
        'Paint.Arc(pt.X - hMap.PixelBox.X, pt.Y - hMap.PixelBox.Y, 5)
        If $hShapes[i].Image Then
        Paint.DrawImage($hShapes[i].Image, pt.X - hMap.PixelBox.X - 16, pt.Y - hMap.PixelBox.Y - 32)
        Else
        Paint.DrawImage($himgPoint, pt.X - hMap.PixelBox.X - 16, pt.Y - hMap.PixelBox.Y - 32)
        Endif
      Case MultiPoint
        For j = 0 To $hShapes[i].Points.Max
          pt = Geo.MapPointToPixel($hShapes[i].Points[j], hMap.zoom)
          Paint.DrawImage($himgPoint, pt.X - hMap.PixelBox.X - 16, pt.Y - hMap.PixelBox.Y - 32)
        Next
        
      Case Polygon
        hPoly = New Integer[]
        For j = 0 To $hShapes[i].Points[0].Max
          pt = Geo.MapPointToPixel($hShapes[i].Points[0][j], hMap.zoom)
          hPoly.Add(pt.x - hMap.PixelBox.X)
          hPoly.Add(pt.y - hMap.PixelBox.Y)
        Next
        Paint.LineWidth = 2
        Paint.Brush = Paint.Color(Color.SetAlpha(icolor, 125))
        Paint.Polygon(hPoly)
        Paint.fill(True)
        Paint.Brush = Paint.Color(icolor)
        Paint.Stroke
        ' If $hShapes[i].Center Then 
        '   pt = Geo.MapPointToPixel($hShapes[i].Center, hMap.Zoom)
        '   'Print $hShapes[i].Center.Lat
        '   Paint.Brush = Paint.Color(Color.White)
        '   Paint.Fill
        ' Endif
        
      Case Shapes.Polyline
        For j = 0 To $hShapes[i].Points.Max
          pt = Geo.MapPointToPixel($hShapes[i].Points[0][j], hMap.zoom)
          hPoly.Add(pt.x - hMap.PixelBox.X)
          hPoly.Add(pt.y - hMap.PixelBox.Y)
        Next
        Paint.LineWidth = 2
        'Paint.Brush = Paint.Color(Color.SetAlpha(Color.red, 125))
        Paint.Polygon(hPoly)
        'Paint.fill(True)
        Paint.Brush = Paint.Color(icolor)
        Paint.Stroke
        
    End Select
  Next
  
End

