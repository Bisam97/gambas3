Public Function Contains(hMapPoint As MapPoint) As Boolean
  
  If Bounds.Lon < hMapPoint.Lon And Bounds.lon2 > hMapPoint.Lon Then
    If Bounds.Lat < hMapPoint.Lat And Bounds.Lat2 > hMapPoint.Lat Then
      Return True
    Endif
  Endif
  Return False
  
End


