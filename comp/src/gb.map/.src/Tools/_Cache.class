Private Function CreateRecurssiveDir(Path As String)
  
  Dim ars As String[]
  Dim sDir, s As String
  'If Message.Warning("Attention le dossier de cache: \n" & Path & "\nva etre créé sur votre disque dure", "&Daccord", "&Annuler") = 2
  '    Error.Raise("Le dossier n'a pas pu être créé")
  'Endif

  If Path = "" Then
    sDir = "/"
    Path = Right($sDirBase, -1)
  Else 
  sDir = $sDirBase
    
  Endif
  ars = Split(Path, "/")
  For Each s In ars
    sDir &/= s
    If Not Exist(sDir) Then
      Mkdir sDir
    Endif
    
  Next
  
Catch 
  Error "Warning: Can't create " & Path & " directory, only online work is possible"

End

