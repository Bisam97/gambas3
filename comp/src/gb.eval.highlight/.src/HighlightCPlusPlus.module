  Next
  
  For Each sStr In ["void", "bool", "signed", "unsigned", "char", "short", "int", "long", "float", "double", "int64_t", "uint64_t", "int32_t", 
    "uint32_t", "int16_t", "uint16_t", "int8_t", "uint8_t", "wchar_t"]
