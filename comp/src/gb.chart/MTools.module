Public Function GetChartMaxLenLabel(oChart As Chart) As String
  
  Dim hSeries As _CSerie
  Dim s As String
  Dim sCurMax As String
  
  sCurMax = 0
  For Each hSeries In oChart
    If Len(hSeries.Text) > Len(sCurMax) Then sCurMax = hSeries.Text
  Next
  Return sCurMax
  
End

