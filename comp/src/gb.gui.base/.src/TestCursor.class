Static Public Sub _property() As Boolean
  
  If Not $cConst Then InitConst
  If $cConst.Exist(Param.Name) Then Return True
  Error.Raise(Subst("Unknown symbol '&1' in class 'Cursor'", Param.Name))
  
End

Static Public Sub _unknown(...) As Variant
  
  If Param.Count = 0 Then Return $cConst[Param.Name]
  Error.Raise(Subst("'Cursor.&1' is read-only", Param.Name))
  
End
