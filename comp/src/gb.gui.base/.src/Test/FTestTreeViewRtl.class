Class Stock

Public Sub Form_Open()

  Component.Load("gb.form")

  ListView1.Direction = Direction.RightToLeft
  ListView1.Add("k1", "Hebrew", Stock["16/view-tree"])
  ListView1.Add("k2", "עברית", Stock["32/view-tree"])

  ListView2.Direction = Direction.LeftToRight
  ListView2.Add("k1", "Hebrew", Stock["16/view-tree"])
  ListView2.Add("k2", "עברית", Stock["32/view-tree"])

  TreeView1.Direction = Direction.RightToLeft
  TreeView1.Add("k1", "Hebrew", Stock["16/view-tree"])
  TreeView1.Add("k2", "עברית", Stock["32/view-tree"], "k1")

  TreeView2.Direction = Direction.LeftToRight
  TreeView2.Add("k1", "Hebrew", Stock["16/view-tree"])
  TreeView2.Add("k2", "עברית", Stock["32/view-tree"], "k1")

End
