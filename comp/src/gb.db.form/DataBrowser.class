Public Const _Properties As String = "*,Control=True,Columns,Header=True,Orientation{Align.Bottom;Left;Right;Top}=Bottom"

Private $hForm As FBrowser

Public Sub _new()
  
  $hForm = New FBrowser(Me)
  
End

Public Sub Refresh()
  
  $hForm.Update
  
End


