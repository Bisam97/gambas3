Public Sub TableView_ColumnClick(Column As Integer)
  
  Dim hSrc As DataSource
  
  hSrc = Common.GetSource(Me)
  If Not hSrc Then Return
  
  If hSrc.Sort <> $aColumns[Column] Then
    hSrc.Sort = $aColumns[Column]
  Else
    hSrc.Sort = ""
  Endif
  
  $iLastSize = 0
  $hCtrl.Refresh

End

