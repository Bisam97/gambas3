Public Sub TableView_Click()
  
  If $bNoActivate Then Return
  If Not $bCreate Then Return
  If $hCtrl.Rows.Count = 0 Then Return
  
  TableView_Change
  
End


Public Sub TableView_Change()

  If $bNoActivate Then Return

  $bCreate = False
  $hCtrl.Rows[$hCtrl.Row].H = -1
  Raise Activate
  
End


