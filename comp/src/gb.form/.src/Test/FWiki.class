Public Sub Form_KeyPress()
  
  If Key.Code = Key.Escape Then 
    Desktop.Screenshot(panControl.ScreenX, panControl.ScreenY, panControl.W, panControl.H).Save("~/gambas/img/wiki/control/" &/ LCase(Object.Type(panControl.Children[0])) & ".png")
    Quit
  Endif
  
