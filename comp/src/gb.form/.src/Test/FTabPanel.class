Public Sub Timer1_Timer()

  Dim hCtrl As Control

  hCtrl = Application.ActiveControl
  If hCtrl <> $hCtrl Then
    $hCtrl = hCtrl
    If $hCtrl Then
      Print "Active: "; $hCtrl.Name
    Else
      Print "Active: NULL"
    Endif
  Endif

End
