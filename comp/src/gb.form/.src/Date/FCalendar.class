End

Public Sub dwgTime_MouseMove()

  Dim iLast As Integer = $iCurrentTime
  
  CalcCurrenTime
  If $iCurrentTime <> iLast Then dwgTime.Refresh

End

Public Sub dwgMonth_MouseMove()

  CalcCurrenDate
  dwgMonth.Refresh

End

