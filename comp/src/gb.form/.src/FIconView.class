Public Sub Form_Open()

  Dim sPath As String
  
  For Each sPath In Dir("~").Sort(gb.Language + gb.IgnoreCase)
    If IsDir("~" &/ sPath) Then
      IconView1.Add(sPath, sPath, Picture["icon:/48/directory"])
    Else
      IconView1.Add(sPath, sPath, Picture["icon:/48/file"])
    Endif
  Next
  
  IconView1.SetFocus
  
End

