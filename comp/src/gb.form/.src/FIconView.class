Public Sub Form_Open()

  Dim sPath As String
  
  For Each sPath In Dir("~").Sort(gb.Language + gb.IgnoreCase)
    If IsDir("~" &/ sPath) Then
      MyIconView1.Add(sPath, sPath, Picture["icon:/48/directory"])
    Else
      MyIconView1.Add(sPath, sPath, Picture["icon:/48/file"])
    Endif
  Next
  
End

