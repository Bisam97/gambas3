Public Sub GetSettings() As Variant[]
  
  If Not $bFile Then 
    Return [CVariant(dvwChoose.Root), dvwChoose.Current, $bView, splChoose.Layout, btnShowHidden.Value, fvwChoose.Settings, Not panBookmark.Hidden]
  Else
    Return [CVariant(dvwChoose.Root), dvwChoose.Current, fvwChoose.Current, $bView, splChoose.Layout, btnShowHidden.Value, fvwChoose.Settings, GetFilterIndex(), Not panBookmark.Hidden]
  Endif 

End

Public Sub SetSettings(aVar As Variant[])
  
  If Not $bFile Then 
  
    Try SetRoot(aVar[0])
    Try dvwChoose.Current = aVar[1]
    Try $bView = Not aVar[2]
    If Not Error Then btnView_Click
    splChoose.Layout = aVar[3]
    Try btnShowHidden.Value = aVar[4]
    Try fvwChoose.Settings = aVar[5] 
    Try panBookmark.Hidden = Not aVar[6]
    
  Else
  
    Try SetRoot(aVar[0])
    Try dvwChoose.Current = aVar[1]
    Try fvwChoose.Current = aVar[2]
    Try $bView = Not aVar[3]
    If Not Error Then btnView_Click
    Try splChoose.Layout = aVar[4]
    Try btnShowHidden.Value = aVar[5]
    Try fvwChoose.Settings = aVar[6]
    Try SetFilterIndex(aVar[7])
    Try panBookmark.Hidden = Not aVar[8]
    
  Endif

End

