Private Sub GetRealLink(sLink As String) As String
  
  If Left(sLink) <> "/" Then sLink = Mid$(sLink, 2)
  Return sLink  
  
End


Public Sub AddBookmark(sLink As String, Optional sName As String, sIcon As String)

  Dim hPanel As HBox
  Dim hIcon As PictureBox
  Dim hVBox As VBox
  Dim hText As Label
  Dim sTooltip As String
  
  If Not sName Then sName = File.Name(sLink)
  If Not sIcon Then sIcon = "icon:/small/bookmark"

  sTooltip = GetRealLink(sLink)
  
  hPanel = New HBox(lstBookmark)
  hPanel.Padding = 2
  hPanel.Spacing = 6
  hPanel.Tag = sLink
  hPanel.ToolTip = sTooltip
  hPanel.Height = hPanel.Font.Height() * 2 + 8

  hIcon = New PictureBox(hPanel)
  hIcon.Picture = Picture[sIcon]
  hIcon.Alignment = Align.Center
  hIcon.Resize(20, 16)
  hIcon.ToolTip = sTooltip

  hVBox = New VBox(hPanel)
  hVBox.Expand = True

  hText = New Label(hVBox)
  'hText.Expand = TRUE
  hText.AutoResize = True
  hText.Expand = True
  'hText.Alignment = Align.TopNormal
  hText.Text = sName  
  hText.ToolTip = sTooltip
  'hText.Background = Color.Yellow
  hText.Font.Bold = True
  'hText.Font.Grade = 3

  $iMaxWidth = Max($iMaxWidth, hText.Font.Width(sName))

  If Left(sLink) <> "$" Then
    hText = New Label(hVBox)
    'hText.Expand = TRUE
    hText.AutoResize = True
    hText.Expand = True
    'hText.Alignment = Align.TopNormal
    hText.Text = Replace(sTooltip, System.User.Home, "~")
    'hText.Font.Grade = -1

    $iMaxWidth = Max($iMaxWidth, hText.Font.Width(hText.Text))
  Endif
  
End

