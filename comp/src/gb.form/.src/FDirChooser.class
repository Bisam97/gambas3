Private Sub AddToHistory(sDir As String)
  
  Dim iInd As Integer
  
  iInd = $aHistory.Find(sDir)
  If iInd >= 0 Then $aHistory.Remove(iInd)
  $aHistory.Add(sDir)
  While $aHistory.Count > 16
    $aHistory.Remove(0)
  Wend

  Object.Lock(cmbDir)
  cmbDir.List = $aHistory  
  Object.Unlock(cmbDir)
  
End

