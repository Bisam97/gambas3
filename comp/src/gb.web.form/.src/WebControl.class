Public Sub _BeforeRender()
  
  If Me Is Webform Then
    Print "<div class=\"gw-form\" id=\""; $sName; "\"";
  Else
    Print "<div class=\"gw-"; LCase(Mid$(Object.Type(Me), 4)); "\" id=\""; $sName; "\"";
  Endif
  Me._RenderStyleSheet()
  Print ">"
  
End

