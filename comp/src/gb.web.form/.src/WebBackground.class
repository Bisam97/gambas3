' Gambas class file

Export

Public Color As String
Public Image As String
Public Repeat As String
Public Attachment As String
Public Position As String
Public Size As String

Public Sub ToString() As String

  Dim aStr As New String[]
  
  If Color Then aStr.Add("background-color: " & Color)
  If Image Then aStr.Add("background-image: url('" & Image & "')")
  If {Repeat} Then aStr.Add("background-repeat: " & {Repeat})
  If Attachment Then aStr.Add("background-attachment: " & Attachment)
  If Position Then aStr.Add("background-position: " & Position)
  If Size Then aStr.Add("background-size: " & Size)
  
  If aStr.Count Then Return aStr.Join(";\n") & ";"
  
End

