  $rectDrawing.X = Value
  Me._DefineRect
  TermWindows.SetRefreshArea(Rect(Me.ScreenX, Me.ScreenY, $rectControl.Width, $rectControl.Height))
  _RecalcPos = True
  If Not $bLockRender Then TermWindows._Render
End

