Public Sub _GetBackGround() As Integer

  Dim i As Integer

  If $iBackGround = -1 Then
    If $iParent > 0 Then
      i = Me.Parent._GetBackGround()
      Return i
    Else
      Return TermColor.White
    Endif
  Else
    Return $iBackGround
  Endif

