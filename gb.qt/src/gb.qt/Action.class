Private Sub Value_Write(Value As Boolean)

  Dim hCtrl As Object
  Dim aCtrl As Object[] = GetControls()
  Dim cKey As New Collection
  Dim sKey As String
  
  For Each hCtrl In aCtrl
    'DEBUG hCtrl;; Value
    If IsToggle(hCtrl) Then 
      SetToggle(hCtrl, Value)
    Else 
      sKey = Get(hCtrl)
      cKey[sKey] = hCtrl
    Endif
  Next    

  For Each hCtrl In cKey
    Action.Raise(hCtrl)
  Next

End

