Create Static

Public Procedure Add(Index As String, Columns As String[], Optional Table As String, Optional Database As String)

  If Table Then
    If Not Database Then Database = modMain.$Connection.Name
    modMain.RunQuery("CREATE INDEX `" & Index & "` ON `" & DataBase & "`.`" & Table & "` (" & modMain.ArrayToString(Columns, True) & ")")
  Else
    modMain.$Index.Add("INDEX `" & Index & "` (" & modMain.ArrayToString(Columns, True) & ")")
  Endif  

End

Public Procedure Delete(Table As String, Index As String, Optional Database As String)

  If Not Database Then Database = modMain.$Connection.Name
  modMain.RunQuery("DROP INDEX `" & Index & "` ON `" & DataBase & "`.`" & Table & "`")

End
