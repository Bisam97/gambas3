Create Static

Public Procedure Add(Index As String, Columns As String[], Optional Table As String)

  If Table Then
    modMain.$Query = "CREATE INDEX `" & Index & "` ON `" & Table & "` (" & modMain.ArrayToString(Columns, True) & ")"
    modMain.RunQuery(modMain.$Query)
  Else
    modMain.$Index.Add("INDEX `" & Index & "` (" & modMain.ArrayToString(Columns, True) & ")")
  Endif  

End

Public Procedure Delete(Table As String, Index As String)

  modMain.RunQuery("DROP INDEX `" & Index & "` ON `" & Table & "`")

End
